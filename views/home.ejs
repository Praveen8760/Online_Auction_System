<body class="bg-white-base">

    <!-- navbar -->
    <nav class="bg-white">
        <div class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4">
        <a href="https://flowbite.com/" class="flex items-center space-x-9 rtl:space-x-reverse">
