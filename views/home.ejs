                                    <path d="M20.924 7.625a1.523 1.523 0 0 0-1.238-1.044l-5.051-.734-2.259-4.577a1.534 1.534 0 0 0-2.752 0L7.365 5.847l-5.051.734A1.535 1.535 0 0 0 1.463 9.2l3.656 3.563-.863 5.031a1.532 1.532 0 0 0 2.226 1.616L11 17.033l4.518 2.375a1.534 1.534 0 0 0 2.226-1.617l-.863-5.03L20.537 9.2a1.523 1.523 0 0 0 .387-1.575Z"/>
                                </svg>
                            </div>
                            <span class="bg-blue-100 text-blue-800 text-xs font-semibold px-2.5 py-0.5 rounded ms-3">5.0</span>
                        </div>
                        <div class="flex items-center justify-between">
                            <span class="text-mobile-h3 font-bold text-gray-900 lg:text-destop-h3"><%= auction.starting_bid %></span>
                            <p>Current Bid: $<span id="current-bid-<%= auction._id %>"><%= auction.current_bid %></span></p>
                            <button onclick="placeBid('<%= auction._id %>', '<%= auction.bid_increment %>' , '<%= userId %>')">Place Bid</button>
                        </div>
                    </div>
                </div>
            <% }) %> 
        </div>

    </main>

    <script src="/socket.io/socket.io.js"></script>

    <script>
        const socket = io();
    
        function placeBid(auctionId, bidIncrement, userId) {
            // Log the user ID and bid increment to verify they're passed correctly
            console.log("User ID:", userId);
            console.log("Bid Increment:", bidIncrement);
    
            // Get the current bid amount from the HTML
            const currentBidElement = document.getElementById(`current-bid-${auctionId}`);
            const currentBid = parseFloat(currentBidElement.textContent);
    
            // Increment the current bid by the value from the database
            const newBidAmount = currentBid + parseFloat(bidIncrement);
    
            // Emit the new bid using Socket.IO
            socket.emit('placeBid', { auctionId, userId, bidAmount: newBidAmount });
        }
    
        // Listen for bid updates from the server
        socket.on('bidUpdated', ({ auctionId, bidAmount }) => {
            const currentBidElement = document.getElementById(`current-bid-${auctionId}`);
            currentBidElement.innerText = bidAmount;
        });
    
        // Listen for errors from the server
        socket.on('error', (message) => {
            alert(message);
        });
    </script>
    
      
</body>
</html>